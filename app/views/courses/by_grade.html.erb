<%= render 'group_links'%>

<div class="span9 offset1">
	<h1>All Courses</h1>
	
	<% Course::GRADES.each do |grade| %>
		<% courses_of_grade = @all_courses.select do |course| %>
			 <% course.grade == grade %>
		<% end %>	

		<div class="panel panel-default" style="height:100px">
			<div class="panel-heading">
				<h3 class="panel-title"><%= "Senior #{grade}"%></h3>
			</div>
			<div class="panel-body">
				<ul>
				<% courses_of_grade.each do |course| %>
				<li class="inline"><%= link_to course.name, course_path(course.id) %></li>
				<% end %>
				</ul>
			</div>

		<div>
		  
		<br>
	<% end %>

	<%= link_to "New Course", new_course_path%>
</div>
