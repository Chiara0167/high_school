<div class="span9">
	<h1>All Courses</h1>
	
	<% Course::DEPARTMENTS.each do |department| %>
		<% courses_of_dept = @all_courses.select do |course| %>
			 <% course.department == department %>
		<% end %>	

		<table>
			<caption><%= department%></caption>
			 <tr>
			    <th>Name</th>
			    <th>Grade</th>
			    <th>Teacher</th>
			 </tr>
			 
			 <% courses_of_dept.each do |course| %>
				 <tr>
					<td><%= link_to course.name, course_path(course.id) %></td>
					<td><%= "Senior #{course.grade}" %></td>
					<td><%= link_to Teacher.find(course.teacher_id).name, teacher_path(course.teacher_id)%></td>
				 </tr>
			<% end %>
		  
		</table>
		<br>
	<% end %>

	<%= link_to "New Course", new_course_path%>
</div>
