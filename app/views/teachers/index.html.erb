<%= render 'group_links'%>

<div class="span9 offset1">
	<h1>All Teachers</h1>
	<table class="table">
	  <tr>
	    <th>Name</th>
	    <th>Department</th>
	  </tr>
	 
	  <% @teachers.each do |teacher| %>
		  <tr>
		    <td><%= link_to teacher.name, teacher_path(teacher) %></td>
		    <td><%= teacher.department %></td>
		  </tr>
	  <% end %>
	</table>

	<br>

	<%= link_to "New Teacher", new_teacher_path%>
</div>
