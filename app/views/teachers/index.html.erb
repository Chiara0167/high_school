<%= render 'teachers/group_links'%>

<div class="span9">
	<h1>All Teachers</h1>
	<table>
	  <tr>
	    <th>Name</th>
	    <th>Department</th>
	  </tr>
	 
	  <% @teachers.each do |teacher| %>
		  <tr>
		    <td><%= link_to teacher.name, teacher_path(teacher.id) %></td>
		    <td><%= teacher.department %></td>
		  </tr>
	  <% end %>
	</table>
</div>
